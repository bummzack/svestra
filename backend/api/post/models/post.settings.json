{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "post_title": {
      "type": "string",
      "required": true
    },
    "post_lead": {
      "type": "text"
    },
    "post_media": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "post_content": {
      "type": "richtext",
      "required": true
    },
    "post_published": {
      "type": "date",
      "required": true
    },
    "post_author": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "post_slug": {
      "type": "uid",
      "targetField": "post_title",
      "required": true
    }
  }
}
