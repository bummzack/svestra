{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "lead": {
      "type": "text"
    },
    "media": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "published": {
      "type": "date",
      "required": true
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "published"
      ],
      "required": true
    }
  }
}
